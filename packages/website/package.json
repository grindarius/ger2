{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "ger2-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "website of ger2",
  "homepage": "https://github.com/grindarius/ger2",
  "bugs": {
    "url": "https://github.com/grindarius/ger2/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grindarius/ger2.git"
  },
  "author": "Bhattarapong Somwong <numbbutt34685@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "trustedDependencies": [
    "sharp"
  ],
  "trustedDependencies-annotation": "Needed for bun to allow running install scripts",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "biome check --apply-unsafe .",
    "fmt.check": "biome check .",
    "lint": "biome format \"src/**/*.ts*\"",
    "preview": "qwik build preview && vite preview --open",
    "start": "vite --open --mode ssr",
    "qwik": "qwik"
  },
  "dependencies": {
    "@lucia-auth/adapter-postgresql": "^3.1.2",
    "daisyui": "^4.10.5",
    "dayjs": "^1.11.11",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "just-group-by": "^2.2.0",
    "ky": "^1.2.4",
    "kysely": "^0.27.3",
    "kysely-postgres-js": "^2.0.0",
    "mitt": "^3.0.1",
    "oslo": "^1.2.0",
    "postgres": "^3.4.4",
    "redis": "^4.6.13",
    "ulidx": "^2.3.0",
    "undici": "^6.15.0",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@builder.io/qwik": "1.5.3",
    "@builder.io/qwik-city": "1.5.3",
    "@playwright/test": "1.43.1",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.20.17",
    "lucia": "^3.2.0",
    "lucia-auth-postgres-keydb-session-adapter": "workspace:^",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "4.3.2"
  }
}
